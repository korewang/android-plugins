<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <RingtonePreference android:showDefault="true" android:ringtoneType="all" android:showSilent="true" android:title="设置铃声" android:key="ring_key" android:summary="选择铃声（测试）"/>
    <PreferenceCategory android:title="个人信息设置">
        <EditTextPreference android:dialogTitle="你所使用的用户名为L：" android:title="填写用户名" android:dialogMessage="输入正确的用户名称" android:summary="填写你的用户名 -测试" android:key="name"/>
        <ListPreference android:dialogTitle="listPreference" android:title="性别" android:summary="选择你的性别" android:key="gender" android:entries="@array/gender_name_list" android:entryValues="@array/gender_value_list"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="系统功能设置组">
        <CheckBoxPreference android:summaryOn="自动保存：开启" android:defaultValue="true" android:key="autoSave" android:title="自动保存进度" android:summaryOff="自动保存：关闭"/>
    </PreferenceCategory>
    

</PreferenceScreen>
